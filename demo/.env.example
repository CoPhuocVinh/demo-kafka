# ============================================
# Kafka Demo - Environment Configuration
# ============================================
# Copy this file to .env and adjust values as needed
# cp .env.example .env

# ============================================
# Application Settings
# ============================================
NODE_ENV=production

# ============================================
# Backend Configuration
# ============================================
# Port for NestJS backend API & WebSocket
BACKEND_PORT=3000

# Kafka broker addresses (comma-separated for cluster)
# For Docker: use internal hostnames
# For local dev: use localhost:9092,localhost:9093,localhost:9094
KAFKA_BROKERS=kafka-1:19092,kafka-2:19092,kafka-3:19092

# Demo producer interval in milliseconds
DEMO_PRODUCER_INTERVAL_MS=2000

# ============================================
# Frontend Configuration
# ============================================
# Port for React frontend (via Nginx)
FRONTEND_PORT=8080

# Backend API URL (for frontend to connect)
VITE_API_URL=http://localhost:3000

# ============================================
# Kafka Cluster Configuration
# ============================================
# Number of partitions per topic (default: 3)
KAFKA_NUM_PARTITIONS=3

# Replication factor for topics
KAFKA_REPLICATION_FACTOR=3

# Minimum in-sync replicas
KAFKA_MIN_INSYNC_REPLICAS=2

# Log retention (hours)
KAFKA_LOG_RETENTION_HOURS=168

# Cluster ID (must be same for all brokers - DO NOT CHANGE)
KAFKA_CLUSTER_ID=MkU3OEVBNTcwNTJENDM2Qk

# ============================================
# Monitoring Configuration
# ============================================
# Prometheus port
PROMETHEUS_PORT=9090

# Grafana port
GRAFANA_PORT=3001

# Grafana admin credentials
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# ============================================
# Kafka UI Configuration
# ============================================
KAFKA_UI_PORT=8081

# ============================================
# External Ports (for VPS deployment)
# ============================================
# Map these if you need external access to Kafka brokers
KAFKA_BROKER_1_EXTERNAL_PORT=9095
KAFKA_BROKER_2_EXTERNAL_PORT=9093
KAFKA_BROKER_3_EXTERNAL_PORT=9094
